<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="White"
             Title="Menu"
             x:Class="ProjetoSD.Mobile.View.MasterView">
    <StackLayout>
        <Frame BackgroundColor="Black">
            <Label Text="Menu" HorizontalOptions="Center" VerticalOptions="Center" TextColor="White" FontSize="30"></Label>
        </Frame>
        <StackLayout VerticalOptions="FillAndExpand">
            <StackLayout VerticalOptions="FillAndExpand">
                <Button Text="Cadastrar Doença" Command="{Binding CadastrarDoencaCommand}" BackgroundColor="#0a1a49" TextColor="White"></Button>
                <Button Text="Alterar Dados da Conta" Command="{Binding AlterarDadosContaCommand}" BackgroundColor="#0a1a49" TextColor="White"></Button>
            </StackLayout>
            <StackLayout VerticalOptions="End" Margin="0, 0, 0, 5">
                <Button Text="Sair" Command="{Binding SairCommand}" BackgroundColor="#0a1a49" TextColor="White"></Button>
            </StackLayout>
        </StackLayout>
    </StackLayout>
</ContentPage>